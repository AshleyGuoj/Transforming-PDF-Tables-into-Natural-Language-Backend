# Application Environment
APP_ENV=local
DEBUG=true

# Database Configuration
DATABASE_URL=postgresql+asyncpg://postgres:postgres@postgres:5432/guideline_transform
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=guideline_transform

# Redis Configuration
REDIS_URL=redis://redis:6379/0

# MinIO/S3 Configuration (Local Development)
S3_ENDPOINT_URL=http://minio:9000
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin
S3_BUCKET=guideline-transform
S3_USE_SSL=false

# AWS Configuration (Production)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_SQS_QUEUE_URL=

# Queue Configuration
QUEUE_ADAPTER=celery  # Options: celery, sqs
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0

# AI/LLM Configuration
OPENAI_API_KEY=
GOOGLE_API_KEY=
ANTHROPIC_API_KEY=
DEFAULT_LLM_MODEL=gpt-4o-mini
DEFAULT_LLM_PROVIDER=openai

# JWT/Auth Configuration
JWT_SECRET_KEY=your-super-secret-jwt-key-change-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json

# Worker Configuration
CELERY_WORKER_CONCURRENCY=4
DRAFT_RETRY_MAX_ATTEMPTS=3
DRAFT_RETRY_BACKOFF_FACTOR=2

# File Processing Configuration
MAX_FILE_SIZE_MB=50
ALLOWED_FILE_EXTENSIONS=pdf
PDF_DPI=300
OCR_ENABLED=false

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=60

# Monitoring & Observability
SENTRY_DSN=
PROMETHEUS_ENABLED=false
METRICS_PORT=9090
