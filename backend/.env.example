# Environment Configuration
ENVIRONMENT=development

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Database Configuration
# For PostgreSQL (recommended for production)
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/guideline_transform

# For SQLite (development/testing only)
# DATABASE_URL=sqlite+aiosqlite:///./guideline_transform.db

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# Celery Configuration
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0
CELERY_WORKER_CONCURRENCY=4

# S3/MinIO Storage
S3_ENDPOINT_URL=http://localhost:9000
S3_BUCKET=guideline-transform
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin
S3_USE_SSL=false

# AI/LLM Configuration
# OpenAI (optional - leave empty for mock responses)
OPENAI_API_KEY=

# JWT Configuration (development only)
JWT_SECRET_KEY=your-secret-key-change-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30

# File Processing
MAX_FILE_SIZE_MB=50
MAX_FILES_PER_REQUEST=10
ALLOWED_FILE_TYPES=application/pdf

# OCR Configuration (optional)
OCR_ENABLED=false

# Worker Configuration
WORKER_TIMEOUT_SECONDS=300
WORKER_MAX_RETRIES=3

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=100

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:5173
